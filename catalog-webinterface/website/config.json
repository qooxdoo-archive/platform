{
  "name"    : "testWebs",

  "include" :
  [
    {
      "path" : "${WEBSITE}/website.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    /*
    "build",
    "build-min",
    "build-module-all",
    "build-module-all-min",
    */
    "build-module-custom-min",
    "test",
    "test-source",
    "validate-config"
  ],

  "default-job" : "build-min",

  "config-warnings" :
  {
    "job-shadowing" : ["api"]
  },

  "let" :
  {
    "APPLICATION"  : "testwebs",
    "QOOXDOO_PATH" : "../../../qooxdoo.git",
    "WEBSITE"      : "${QOOXDOO_PATH}/component/standalone/website",
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "api" :
    {
      "run" : ["api-files"]
    },

    "api-files" :
    {
      "extend" : ["cache"],
      "copy-files" :
      {
        "files" :
        [
          "samples",
          "api.css",
          "default.highlight.css",
          "fiddleframe.html",
          "highlight.LICENSE",
          "highlight.pack.js",
          "index.html",
          "jsfiddle-logo_small.png",
          "viewer.js"
        ],
        "source" : "${WEBSITE}/api",
        "target" : "api"
      }
    },

    "build-module-custom-min" :
    {
      "desc" : "build modules needed for catalog webinterface",
      "run" : [
        "build-core-min",
        "build-module-io-min",
        "build-module-template-min",
        "build-module-dataset-min"
      ]
    }
  }
}

